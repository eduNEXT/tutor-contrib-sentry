try:
    import sentry_sdk
    from sentry_sdk.integrations.django import DjangoIntegration

    sentry_sdk.init(
        dsn="{{SENTRY_DSN}}",
        ignore_errors={{SENTRY_IGNORED_ERRORS}},
        integrations=[
            DjangoIntegration(),
        ],
        send_default_pii=True,
        **{{SENTRY_EXTRA_ARGS}},
    )
except ImportError:
    logging.getLogger(__file__).info("Sentry SDK is not installed.")
